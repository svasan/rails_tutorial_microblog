<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", user_path(current_user) %></span>
      <span><%= pluralize(current_user.microposts.count, "micropost") %></span>
    </section>
    <section class="stats">
      <%= render "shared/stats", user: @user %>
    </section>
    <% if @users.any? %>
      <section class="user_avatars">
	<% @users.each do |user| %>
	  <%= link_to gravatar_for(user, size: 30), user %>
	<% end %>
      </section>
    <% end %>
    <%= render "relationship_form" if has_current_user?%>
  </aside>
  <div class="col-md-8">
    <h3><%= @title%></h3>
    <% if @users.any? %>
      <ul class="users follow">
	<%= render @users%>
      </ul>
    <% end %>
    <%= will_paginate %>
  </div>
</div>
