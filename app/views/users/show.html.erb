<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
	<%= gravatar_for @user %>
	<%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats", user: @user %>
    </section>
    <%= render "relationship_form" if has_current_user?%>
  </aside>
  <div class="col-md-8">
    <% if @microposts.any? %>
      <h1>Microposts (<%= @microposts.count%>)</h1>
      <ol class="microposts">
	<%= render @microposts%>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
